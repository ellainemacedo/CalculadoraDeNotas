<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/edtNota1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Nota 1"
            android:padding="20dp"
            android:background="@color/colorGrey"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"/>

    <EditText
            android:id="@+id/edtNota2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Nota 2"
            android:padding="20dp"
            android:background="@color/colorGrey"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"/>

    <EditText
            android:id="@+id/edtNota3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Nota 3"
            android:padding="20dp"
            android:background="@color/colorGrey"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_below="@id/edtNota1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"/>

    <EditText
            android:id="@+id/edtNota4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Nota 4"
            android:padding="20dp"
            android:background="@color/colorGrey"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_below="@id/edtNota2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"/>

    <EditText
            android:id="@+id/edtFaltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="NÃºmero de faltas"
            android:padding="20dp"
            android:background="@color/colorGrey"
            android:inputType="number"
            android:maxLength="2"
            android:gravity="center"
            android:layout_below="@id/edtNota3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

    <Button android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtFaltas"
            android:layout_margin="30dp"
            android:text="Calcular"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:backgroundTint="@color/colorGreyDark"
            android:padding="20dp"/>

    <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/btnCalcular"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>


</RelativeLayout>